<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Contactanos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false"
        app:srcCompat="@drawable/ubicaciontexto" />

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false"
        app:srcCompat="@drawable/direccion" />

    <Button
        android:id="@+id/mapas"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:drawableBottom="@drawable/maps"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp">

    </Button>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false"
        app:srcCompat="@drawable/contactanostexto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/Instagram"
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/insta"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/Celular"
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/celular"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/face"
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/face" />

        <Button
            android:id="@+id/whats"
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/whats"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>